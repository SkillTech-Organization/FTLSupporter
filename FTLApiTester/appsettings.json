{
  "ApiKey": "",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "FTLApiTester": {
    "AzureStorageConnectionString": "",
    "QueueName": "",
    "TestDataPath": "",
    "FTLApiBaseUrl": "",
    "MaxTruckDistance": 10000,
    "MaxMessagesFromQueueAtOnce": 32, // Max 32
    "MaxMessageTimeSpanInMinutes": 10,
    "WaitBeforeBetweenQueueQueryInMs": 10000,
    "MaxMessageLimitPerRequest": 1000,
    "MaxWaitLimitForResultPerRequestInMinutes": 10
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "Logs/log-.txt", "rollingInterval": "Day", "shared": true }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ],
    "Properties": {
      "Application": "FTLApiTester"
    }
  }
}
