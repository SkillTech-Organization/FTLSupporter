<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PMAdmin"
             xmlns:DTPicker="clr-namespace:DTPicker;assembly=DTPicker" x:Class="PMAdmin.uscLicences"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500" >
    <Grid ShowGridLines="false" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="120" />
        </Grid.RowDefinitions>

        <!--  IsSynchronizedWithCurrentItem="False"  is jó lehet -->
        <DataGrid Grid.Row="0" x:Name="dgrLicences" 
			ItemsSource="{Binding PMapLicenceList}" CanUserAddRows="False" IsReadOnly="True"
			SelectionMode="Single" SelectionUnit="FullRow" IsSynchronizedWithCurrentItem="True"   
            AutoGeneratedColumns="dgrLicences_AutoGeneratedColumns" AutoGeneratingColumn="dgrLicences_AutoGeneratingColumn" 
            SelectionChanged="dgrLicences_SelectionChanged" 
            />
        <Grid Grid.Row="1" ShowGridLines="false" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0"  ShowGridLines="false">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label Content="Instance megnevezés" VerticalAlignment="Center" HorizontalAlignment="Right" />
                <Label Content="Lejárati dátum" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" />
                <Label Content="Megjegyzés" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right" />
                <TextBox x:Name="txtAppInstance"  Grid.Column="1" Grid.Row="0" Height="22"  Margin="5,0,5,0" HorizontalAlignment="Stretch"  TextWrapping="Wrap"  VerticalAlignment="Center"  
                         Text="{Binding Path=EditedItem.AppInstance, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True,  ValidatesOnDataErrors=True}"   />
                <DatePicker x:Name="dtpExpired" Grid.Column="1" HorizontalAlignment="Left" Margin="5,0,8,0" Grid.Row="1" VerticalAlignment="Center"
                            Text="{Binding Path=EditedItem.Expired, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True,  ValidatesOnDataErrors=True}" Width="125"  />
                <TextBox x:Name="txtComment"  Grid.Column="1" Grid.Row="2" Height="22"  Margin="5,0,5,0" HorizontalAlignment="Stretch"  TextWrapping="Wrap"  VerticalAlignment="Center"  
                         Text="{Binding Path=EditedItem.Comment, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True,  ValidatesOnDataErrors=True}"   />
            </Grid>

            <Grid Grid.Column="1" ShowGridLines="false" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="24"/>
                    <RowDefinition/>
                    <RowDefinition Height="24"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button x:Name="btnNew" Content="Új" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="2,2,2,2" Grid.Row="0" Click="btnNew_Click" />
                <Button x:Name="btnReset" Content="Alaphelyzet" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="2,2,2,2" Grid.Row="1" Click="btnReset_Click" IsEnabled="{Binding Path=EditedItem.ChangedState}" />
                <Button x:Name="btnSave" Content="Mentés" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="2,0,2,2" Grid.Row="2" Click="btnSave_Click" IsEnabled="{Binding Path=EditedItem.ChangedState}" Height="20" />
                <Button x:Name="btnGen" Content="ID file generálása" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="2,2,2,2" Grid.Row="3" Click="btnGen_Click" IsEnabled="{Binding Path=EditedItem.StoredState}" />
                <Button x:Name="btnDel" Content="Törlés" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="2,2,2,2" Grid.Row="4" Click="btnDel_Click" IsEnabled="{Binding Path=EditedItem.StoredState}" />
            </Grid>
        </Grid>

    </Grid>
</UserControl>
