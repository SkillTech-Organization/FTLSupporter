<Window x:Name="wndValidationErrors" x:Class="PMAdmin.dlgValidationErrors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=""  
        WindowStartupLocation="CenterScreen" 
        Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        
            <TextBlock x:Name="DataGridTitle" 
                 TextAlignment="Center"   />
      
        <ListBox x:Name="lstErr" Grid.Row="1"  ItemsSource="{Binding}"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Message}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="OK_Button" Content="OK" Grid.Row="2" VerticalAlignment="Center" Width="76" Height ="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Click="OK_Button_Click"/>

    </Grid>
</Window>
